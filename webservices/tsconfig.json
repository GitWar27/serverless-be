{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "/build",
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": [
    ".//*.ts",
    "src/v1/auth/registration/index.ts",
    "src/v1/auth/confirmation/index.ts"
  ],
  "exclude": [
    "node_modules//",
    ".serverless/**/",
    ".webpack//*",
    "_warmup//",
    ".vscode/**/"
  ]
}
